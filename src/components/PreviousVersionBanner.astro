---
interface Props {
	version?: string;
	currentVersionSlug: string;
	currentVersionLabel?: string;
}

const { version, currentVersionSlug, currentVersionLabel } = Astro.props;
---

<div class="previous-version-banner">
	<div class="banner-content">
		<div class="banner-icon">
			<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<circle cx="12" cy="12" r="10"></circle>
				<polyline points="12 6 12 12 16 14"></polyline>
			</svg>
		</div>
		<div class="banner-text">
			<strong>Previous Version</strong>
			<span>
				You're viewing {version ? `version ${version}` : 'a previous version'} of this project.
			</span>
		</div>
		<a href={`/projects/${currentVersionSlug}/`} class="current-link">
			View Current Version {currentVersionLabel && `(${currentVersionLabel})`}
			<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<line x1="5" y1="12" x2="19" y2="12"></line>
				<polyline points="12 5 19 12 12 19"></polyline>
			</svg>
		</a>
	</div>
</div>

<style>
	.previous-version-banner {
		background: var(--bg-secondary);
		border: 1px solid #e5a94d;
		border-left: 3px solid #d97706;
		border-radius: 6px;
		padding: 0.75rem 1rem;
		margin: 0.5rem 0;
	}

	.banner-content {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		gap: 0.75rem;
	}

	.banner-icon {
		display: flex;
		align-items: center;
		flex-shrink: 0;
		color: #d97706;
	}

	.banner-text {
		flex: 1;
		min-width: 200px;
		color: rgb(var(--gray-dark));
	}

	.banner-text strong {
		display: inline;
		font-size: 0.85rem;
		color: #b45309;
		margin-right: 0.375rem;
	}

	.banner-text span {
		font-size: 0.85rem;
		color: rgb(var(--gray));
	}

	.current-link {
		display: inline-flex;
		align-items: center;
		gap: 0.375rem;
		background: transparent;
		color: var(--accent);
		padding: 0.375rem 0.75rem;
		border: 1px solid var(--accent);
		border-radius: 4px;
		text-decoration: none;
		font-size: 0.8rem;
		font-weight: 600;
		transition: all 0.2s ease;
		white-space: nowrap;
	}

	.current-link:hover {
		background: var(--accent);
		color: white;
	}

	.current-link svg {
		transition: transform 0.2s ease;
		width: 14px;
		height: 14px;
	}

	.current-link:hover svg {
		transform: translateX(2px);
	}

	@media (max-width: 640px) {
		.banner-content {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.5rem;
		}

		.banner-text strong {
			display: block;
			margin-bottom: 0.125rem;
		}

		.current-link {
			width: 100%;
			justify-content: center;
		}
	}
</style>
