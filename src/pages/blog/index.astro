---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: min(900px, 95%);
				margin: 0 auto;
				padding: var(--space-lg) 0;
			}

			.header {
				margin-bottom: var(--space-xl);
			}

			.header h1 {
				margin: 0 0 0.5rem 0;
				font-size: 2.5rem;
				color: rgb(var(--black));
			}

			.header p {
				margin: 0;
				color: rgb(var(--gray));
				font-size: 1.1rem;
				line-height: 1.6;
			}

			ul {
				list-style-type: none;
				margin: 0;
				padding: 0;
				display: flex;
				flex-direction: column;
				gap: var(--space-lg);
			}

			ul li {
				display: flex;
				flex-direction: column;
				gap: 0.75rem;
				padding-bottom: var(--space-lg);
				border-bottom: 1px solid rgb(var(--gray-light));
			}

			ul li:last-child {
				border-bottom: none;
			}

			.post-meta {
				display: flex;
				flex-direction: column;
				gap: 0.5rem;
			}

			.date {
				margin: 0;
				color: rgb(var(--gray));
				font-size: 0.875rem;
				font-weight: 500;
				text-transform: uppercase;
				letter-spacing: 0.5px;
			}

			.tag {
				display: inline-block;
				background: rgba(74, 103, 65, 0.1);
				color: var(--accent);
				padding: 0.25rem 0.5rem;
				border-radius: 4px;
				font-size: 0.75rem;
				font-weight: 600;
				text-transform: uppercase;
				letter-spacing: 0.5px;
			}

			.post-content {
				display: flex;
				flex-direction: column;
				gap: 0.5rem;
			}

			.title {
				margin: 0;
				font-size: 1.5rem;
				line-height: 1.3;
			}

			.title a {
				color: rgb(var(--black));
				text-decoration: none;
				transition: color 0.2s ease;
			}

			.title a:hover {
				color: var(--accent);
				text-decoration: underline;
			}

			.description {
				margin: 0;
				color: rgb(var(--gray-dark));
				font-size: 1rem;
				line-height: 1.6;
			}

			/* Desktop: side-by-side layout */
			@media (min-width: 640px) {
				ul li {
					flex-direction: row;
					gap: 2rem;
				}

				.post-meta {
					flex-shrink: 0;
					width: 160px;
				}

				.post-content {
					flex: 1;
				}
			}

			/* Mobile adjustments */
			@media (max-width: 639px) {
				.header h1 {
					font-size: 2rem;
				}

				.title {
					font-size: 1.25rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<div class="header">
					<h1>Blog</h1>
					<p>Technical writings on cloud security, infrastructure, and building with modern tools. A means to informally discuss and profess my perspective on projects, technology, and the process of building.</p>
				</div>
				<ul>
					{
						posts.map((post) => (
							<li>
								<div class="post-meta">
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
									{post.data.tags && post.data.tags.length > 0 && (
										<span class="tag">{post.data.tags[0]}</span>
									)}
								</div>
								<div class="post-content">
									<h2 class="title">
										<a href={`/blog/${post.id}/`}>{post.data.title}</a>
									</h2>
									<p class="description">{post.data.description}</p>
								</div>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
